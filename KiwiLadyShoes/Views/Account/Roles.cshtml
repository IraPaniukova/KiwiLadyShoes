@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>


<div class="row">
    <div class="col-md-9">
        <h1>Roles</h1>
        <a href="@Url.Action("CreateRole")" class=" btn btn-custom">Create New Role</a>
    </div>

    <div class="col-md-3">
        <br />
        
        <a class="btn btn-secondary" asp-area="" asp-controller="Account" asp-action="Index"></i> Back to Roles Page</a>
    </div>
</div>


<table>
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a href="@Url.Action("EditRole", new { id = role.Id })">Edit</a> 
                 
                </td>
                <td>
                    @* <a href="@Url.Action("DeleteRole", new { id = role.Id })">Delete</a> |*@
                    <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this role?');">
                        <button type="submit" class="btn btn-danger" >Delete</button>

                    </form>
                </td>
                
            </tr>
           
        }
    </tbody>
</table>

<a href="@Url.Action("CreateRole")">Create New Role</a>
