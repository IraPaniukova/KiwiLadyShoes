<h1 style="text-transform: uppercase">Manage Roles</h1>  @*//Ira, 16/11*@
<a class="btn btn-secondary" asp-area="" asp-controller="Management" asp-action="Index"><i class="bi bi-house-gear"></i> Back to Management Page</a>

<br />
<hr />
<br />
@if (User.IsInRole("Manager") || User.IsInRole("Administrator"))
{
    <div class="row">
        <div class="col-md-6">
            <h3>Manage roles</h3>
            <br>

            <form  action="@Url.Action("Roles", "Account")">
                <div class="d-grid col-3 justify-content-beginning">
                    <input class="btn btn-custom" type="submit" value="Go to the page">
                </div>
            </form>
            <br />


        </div>
        <div class="col-md-6">

            <h3>Create roles</h3>
            <br>
            <form  action="@Url.Action("CreateRole", "Account")">
                <div class="d-grid col-3 justify-content-beginning">
                    <input class="btn btn-custom" type="submit" value="Go to the page">
                </div>
            </form>
        </div>
    </div>
    <br />
    <hr />
    <br />
    <div class="row">
        <div class="col-md-6">

                <h3>Assign or update roles</h3>
                <br>

                <form action="@Url.Action("Users", "Account")">
                    <div class="d-grid col-3 justify-content-beginning">
                        <input class="btn btn-custom" type="submit" value="Go to the page">
                    </div>
                </form>
            
        </div>
        <div class="col-md-6">

              
        </div>
    </div>
    <br />
    <hr />
    <br />


}